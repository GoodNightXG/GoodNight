<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/mainId"
    android:background="@mipmap/background03">

    <Button
        android:id="@+id/topButton"
        android:layout_width="fill_parent"
        android:layout_height="55.0dip"
        android:background="@drawable/topbutton"
        android:paddingRight="20dp"
        android:text="@string/top_text"
        android:textColor="#ffffffff" />

    <Button
        android:id="@+id/number"
        android:layout_width="55.0dip"
        android:layout_height="55.0dip"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/topButton"
        android:layout_marginRight="17.0dip"
        android:background="@drawable/number"
        android:textColor="#ffffffff" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="391dp"
        android:layout_below="@id/topButton"
        android:layout_marginTop="33dp"
        android:listSelector="#00000000" />

    <Button
        android:id="@+id/LoButton"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/number"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/blue"
        android:textSize="10sp"
        android:text="注销" />

    <Button
        android:id="@+id/ColorButton"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/LoButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:background="@drawable/blue"
        android:textSize="10sp"
        android:text="换背景" />

</RelativeLayout>