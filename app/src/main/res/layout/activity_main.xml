<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/mainId"
    android:background="@mipmap/background03">

    <Button
        android:id="@+id/topButton"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height55"
        android:background="@drawable/topbutton"
        android:paddingRight="@dimen/top20"
        android:text="@string/top_text"
        android:textColor="@color/fcolor" />

    <Button
        android:id="@+id/number"
        android:layout_width="@dimen/height55"
        android:layout_height="@dimen/height55"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/topButton"
        android:layout_marginRight="@dimen/right17"
        android:background="@drawable/number"
        android:textColor="@color/fcolor" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height390"
        android:layout_below="@id/topButton"
        android:layout_marginTop="@dimen/top33"
        android:listSelector="@color/ocolor" />

    <Button
        android:id="@+id/lobutton"
        android:layout_width="@dimen/width40"
        android:layout_height="@dimen/top20"
        android:layout_alignEnd="@+id/number"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/Bottom5"
        android:background="@drawable/blue"
        android:textSize="@dimen/textsize3"
        android:text="@string/logout" />

</RelativeLayout>