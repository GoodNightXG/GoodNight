<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.goodnightnote.login.RegisterActivity"
    >


    <EditText
        android:id="@+id/et_username_new"
        android:layout_width="@dimen/width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="@dimen/top50"
        android:layout_marginLeft="@dimen/left130"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="@dimen/top65"
        android:layout_marginLeft="@dimen/left70"
        android:text="@string/account"
         />

    <EditText
        android:id="@+id/et_password_new"
        android:layout_width="@dimen/width"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_username_new"
        android:layout_marginTop="@dimen/top10"
        android:inputType="textPassword"
        android:layout_marginLeft="@dimen/left130"
        android:hint="@string/password_specification"
        android:textSize="@dimen/textsize2"
       />

    <EditText
        android:id="@+id/et_password_ack"
        android:layout_width="@dimen/width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password_new"
        android:layout_marginTop="@dimen/top13"
        android:inputType="textPassword"
        android:layout_marginLeft="@dimen/left130"
        android:textSize="@dimen/textsize2"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_marginTop="@dimen/top35"
        android:layout_marginLeft="@dimen/top65"
        android:text="@string/setting_password"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="@dimen/top35"
        android:layout_marginLeft="@dimen/top65"
        android:text="@string/confirm_pssword"
       />

    <Button
        android:id="@+id/bt_send_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password_ack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/top10"
        android:text="@string/click_register"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/top30"
        android:text="@string/welcome"
        android:textSize="@dimen/textsize"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        />

</RelativeLayout>